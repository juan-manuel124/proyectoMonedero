<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="795dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="62dp">

        <ImageView
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:src="@drawable/imagen" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="464dp"
            android:layout_height="match_parent"

            android:text="¿Acabas de cobrar tu salario y ya no tienes dinero? ¿No sabes en que gastos se termino tu dinero? No te preocupes ingresa a  DDD y lograrás administrar mejor tus ingresos, para que puedas lograr todo lo sueños que te propongas. "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/teal_700"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="798dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="274dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="774dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Ingresa Aqui"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:src="@drawable/dinero" />

        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="131dp"
                android:layout_height="20dp"
                android:text="Ingrese Usuario"
                android:textColor="#3F51B5"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/usuario"
                android:layout_width="131dp"
                android:layout_height="20dp"
                android:hint="usuario"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="255dp"
                android:layout_height="20dp"
                android:text="Ingrese Contraseña"
                android:textColor="#72BD75"
                android:textSize="15dp" />

            <EditText

                android:id="@+id/contraseña"
                android:layout_width="131dp"
                android:layout_height="20dp"
                android:hint="contraseña"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/usuario"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:minHeight="48dp"
                android:onClick="ingreso"
                android:text="Ingresar"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



